<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tgc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:text="Grados Centigrados"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/centigrados"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btgcmas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btgcmenos"
        app:layout_constraintTop_toBottomOf="@+id/tgc"
        app:layout_editor_absoluteX="122dp"
        app:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/btgcmenos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="decrementarCentigrados"
        android:text="-1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/centigrados"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tgc" />

    <Button
        android:id="@+id/btgcmas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="incrementarCentigrados"
        android:text="+1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/centigrados"
        app:layout_constraintTop_toBottomOf="@+id/tgc" />


    <TextView
        android:id="@+id/tgf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:text="Grados Fahrenheit"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centigrados" />

    <Button
        android:id="@+id/btgfmenos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="decrementarFahrenheit"
        android:text="-1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/fahrenheit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tgf" />

    <EditText
        android:id="@+id/fahrenheit"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="32.0"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btgfmas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btgfmenos"
        app:layout_constraintTop_toBottomOf="@+id/tgf"
        app:layout_editor_absoluteX="122dp"
        app:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/btgfmas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="incrementarFahrenheit"
        android:text="+1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fahrenheit"
        app:layout_constraintTop_toBottomOf="@+id/tgf" />


<!-- **************************************************************************** -->

    <TextView
        android:id="@+id/tgk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/textview_border"
        android:padding="10dp"
        android:text="Grados Kelvin"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheit" />

    <Button
        android:id="@+id/btgkmenos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="decrementarKelvin"
        android:text="-1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/kelvin"
        app:layout_constraintTop_toBottomOf="@+id/tgk" />

    <EditText
        android:id="@+id/kelvin"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="273.15"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btgkmenos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btgkmas"
        app:layout_constraintTop_toBottomOf="@+id/tgk"
        app:layout_editor_absoluteX="122dp"
        app:layout_editor_absoluteY="117dp" />

    <Button
        android:id="@+id/btgkmas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:onClick="incrementarKelvin"
        android:text="+1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/kelvin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tgk" />

</androidx.constraintlayout.widget.ConstraintLayout>